	@Test(priority = 1) 
	void testPostusingJsonLibrary() 
	{
	    JSONObject data = new JSONObject();
	    data.put("name", "Birgit");
	    data.put("location", "Germany");
	    data.put("phone", "348738473");
	    String coursesArr[] = {"Selenium" , "Java"};
	    data.put("courses", coursesArr);
	   

	  id =  given()
	     .contentType("application/json")
	     .body(data.toString())

	   .when()
	       .post("http://localhost:3000/students")
	      
	   .then()
	      .statusCode(201)
	      .body("name", equalTo("Birgit"))
	      .body("location" , equalTo("Germany"))
	      .body("phone", equalTo("348738473"))
	      .body("courses[0]",equalTo("Selenium"))
	      .body("courses[1]", equalTo("Java"))
	      .header("Content-Type", "application/json; charset=utf-8") 
	      .log().all();
	  


	}


	@Test(priority = 1) 
	void testDelete() 
	{
	   given()
	   .when()
	      .delete("http://localhost:3000/students/4")

	   .then()
	      .statusCode(200);
	      

	}
	
	
	
	
	
	

}
